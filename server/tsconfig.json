{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src", 
    "outDir": "dist",
    "strict": true, 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],  // Include all TypeScript files in the src folder
  "exclude": ["node_modules", "dist"]  // Exclude node_modules and dist
}
